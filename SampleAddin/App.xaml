<Application x:Class="SampleAddin.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SampleAddin">
    <Application.Resources>
        <ResourceDictionary>
            <Style x:Key="FontAwesomeStyle" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="pack://application:,,,/Resources/#Maggie" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
